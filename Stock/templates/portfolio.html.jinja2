{% extends "base.html.jinja2" %}
{% block content %}
<style>
    body {
        background: 
          url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="30"><polygon points="10,0 19,5 19,25 10,30 1,25 1,5" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></svg>') repeat,
          linear-gradient(135deg, {{ user.background_color if user and user.background_color else '#1a1a1a' }} 0%, #000000 100%);
        background-size: 20px 30px, 100% 100%;
        background-position: center;
        background-attachment: fixed;
        color: #ffffff;
        font-family: 'Arial', sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 1;
        overflow-y: auto;
        animation: animateBackground 60s infinite linear;
      }
      
      @keyframes animateBackground {
        0% {
          background-position: 0 0;
        }
        100% {
          background-position: 100% 0;
        }
      }
      
      body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.1), rgba(128, 128, 128, 0.1));
        animation: animateShadow 10s infinite alternate;
        z-index: -1;
      }
      
      @keyframes animateShadow {
        0% {
          transform: scale(1);
          opacity: 0.5;
        }
        100% {
          transform: scale(1.2);
          opacity: 1;
        }
      }

    /* Profile Picture */
    .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid {{ user.accent_color if user and user.accent_color else '#007bff' }};
    }

    /* Container Centered */
    .container-centered {
        text-align: center;
        padding: 20px;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 15px;
        box-shadow: 0 0 30px rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.3);
        backdrop-filter: blur(10px);
        margin: 20px auto;
        max-width: 90%;
        position: relative;
        z-index: 10;
    }

    /* Ptitle */
    .Ptitle {
        font-size: 50px;
        color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        text-shadow: 0 0 10px rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.5);
    }

    /* User Balance */
    .user_balance {
        font-size: 25px;
        color: #ffffff;
        margin-bottom: 20px;
    }

    /* Badges */
    .badges {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .badge {
        background-color: rgba(51, 51, 51, 0.8);
        padding: 10px;
        border-radius: 5px;
        color: #ffffff;
        border: 1px solid {{ user.accent_color if user and user.accent_color else '#007bff' }};
        transition: transform 0.3s ease, transform 0.3s ease;
    }

    .badge:hover {
        transform: translateY(-5px) scale(1.1);
      }

    /* Leaderboard Table */
    .leaderboard-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
    }

    .leaderboard-table th,
    .leaderboard-table td {
        padding: 10px;
        border: 1px solid #444;
        text-align: center;
        color: #ffffff;
    }

    .leaderboard-table th {
        background-color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        color: #ffffff;
    }

    /* Display Value */
    .displayvalue {
        font-size: 30px;
        color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        margin-top: 20px;
    }

    /* Total Value */
    .total_value {
        font-size: 25px;
        color: #ffffff;
        margin-bottom: 20px;
    }

    /* Register Button */
    .register-button {
        display: inline-block;
        background-color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .register-button:hover {
        background-color: {{ (user.accent_color if user and user.accent_color else '#007bff') | lighten_color(10) }};
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.4);
    }

</style>

<div class="container-centered">
    <h1 class="Ptitle">{{ user.username }}'s Portfolio</h1>
    <img src="{{ user.profile_picture }}" alt="Profile Picture" class="profile-picture">
    <p class="user_balance">Account balance: ${{ user.balance }}</p>

    <!-- Badges Section -->
    <h2 class="accent">Badges:</h2>
    <div class="badges">
        {% for badge in badges %}
        <div class="badge">
            <h3>{{ badge.name }}</h3>
            <p>{{ badge.description }}</p>
        </div>
        {% endfor %}
    </div>

    <!-- Portfolio Table -->
    <table class="leaderboard-table">
        <thead>
            <tr>
                <th>Symbol</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Purchase Price</th>
                <th>Current Price</th>
                <th>Total Value</th>
                <th>Profit/Loss</th>
                <th>P/L %</th>
            </tr>
        </thead>
        <tbody>
            {% for asset in portfolio %}
            <tr class="leaderboard-tr">
                <td>{{ asset.symbol }}</td>
                <td>{{ asset.asset_type|capitalize }}</td>
                <td>{{ asset.shares }}</td>
                <td>${{ asset.purchase_price }}</td>
                <td>${{ asset.latest_price }}</td>
                <td>${{ asset.value }}</td>
                <td>${{ ((asset.latest_price - asset.purchase_price) * asset.shares) | round(2) }}</td>
                <td>
                    {% if asset.purchase_price != 0 %}
                    {{ (((asset.latest_price - asset.purchase_price) / asset.purchase_price) * 100) | round(2) }}%
                    {% else %}
                    N/A
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Total Portfolio Value -->
    <h2 class="displayvalue">Total Portfolio Value:</h2>
    <h2 class="total_value">${{ total_value }}</h2>

    <!-- Back to Leaderboard Button -->
    <a href="{{ url_for('leaderboard') }}" class="register-button">Back to Leaderboard</a>
</div>
{% endblock %}