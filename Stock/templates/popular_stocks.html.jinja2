{% extends "base.html.jinja2" %}

{% block content %}
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Smooch+Sans:wght@100..900&display=swap" rel="stylesheet">
</head>
<style>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: 
      linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
      linear-gradient(0deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
      radial-gradient(circle at center, 
        {{ user.gradient_color if user else 'rgba(16,0,32,1)' }} 0%, 
        rgba(0,0,0,1) 20%, 
        rgba(0,0,0,1) 100%);
    background-size: 
      20px 20px,
      20px 20px,
      110% 110%;
    background-position: 
      0 0,
      0 0,
      -185% -150%;
    background-attachment: fixed;
  }

  .popular-stocks {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    min-height: 100vh;
    width: 100%;
    padding: 5vw;
    position: relative;
    box-sizing: border-box;
  }

  .header-container {
    text-align: left;
    max-width: 90%;
    z-index: 1;
    padding: 1rem;
    margin-top: -10vh;
  }

  .stock-trading {
    font-size: clamp(3rem, 15vw, 12rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-weight: 900;
    font-family: "Smooch Sans", serif;
    letter-spacing: 0.5rem;
    margin-bottom: 0;
    line-height: 0.9;
  }

  .made-free {
    font-size: clamp(1rem, 4vw, 3rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-family: "Merriweather", serif;
    font-weight: 400;
    margin: 0;
    padding-left: 0.5rem;
  }

  .stock-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .stock-card {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 20px;
    background-color: {{ user.background_color if user else 'rgba(16,0,32,1)' }};
    border: 1px solid {{ user.accent_color if user else '#007bff' }};
    border-radius: 10px;
    height: 200px;
    cursor: pointer;
  }

  .stock-card:hover {
    opacity: 0.8;
  }

  .stock-symbol {
    font-size: clamp(1.5rem, 5vw, 3rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-weight: 900;
    font-family: "Smooch Sans", serif;
    letter-spacing: 0.5rem;
    margin-bottom: 10px;
  }

  .stock-name {
    font-size: clamp(1rem, 4vw, 3rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-family: "Merriweather", serif;
    font-weight: 400;
  }

  .cursor-gradient {
    position: absolute;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: radial-gradient(circle at center, {{ user.accent_color if user else '#007bff' }} 0%, rgba(0,0,0,0) 100%);
    pointer-events: none;
    transition: transform 0.1s ease-out;
  }

  @media (max-width: 768px) {
    .popular-stocks {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .header-container {
      text-align: center;
      max-width: 100%;
    }

    .stock-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="popular-stocks">
  <div class="header-container">
    <h1 class="stock-trading">Popular Stocks</h1>
  </div>
  <div class="stock-grid">
    {% for stock in stocks %}
    <a href="{{ url_for('lookup', symbol=stock.symbol) }}" class="stock-card">
      <div class="stock-symbol">{{ stock.symbol }}</div>
      <div class="stock-name">{{ stock.name }}</div>
    </a>
    {% endfor %}
  </div>
  <div class="cursor-gradient" id="cursor-gradient"></div>
</div>

<script>
  const cursorGradient = document.getElementById('cursor-gradient');

  document.addEventListener('mousemove', (e) => {
    cursorGradient.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
  });
</script>
{% endblock %}