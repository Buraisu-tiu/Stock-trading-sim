{% extends "base.html.jinja2" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-8">
        <h1 class="text-2xl font-bold mb-6" style="color: {{ user.text_color }}">Stock Lookup</h1>
        
        <!-- Search Form -->
        <form method="POST" class="mb-8">
            <div class="flex items-center gap-4">
                <div class="flex-grow">
                    <input type="text" 
                           name="symbol" 
                           placeholder="Enter stock symbol (e.g., AAPL)"
                           class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:border-blue-500"
                           value="{{ symbol or '' }}"
                           required>
                </div>
                <button type="submit" 
                        class="px-6 py-2 rounded-lg text-white font-semibold"
                        style="background-color: {{ user.accent_color }}">
                    Search
                </button>
            </div>
        </form>

        {% if error_message %}
        <div class="bg-red-600 text-white p-4 rounded-lg mb-6">
            {{ error_message }}
        </div>
        {% endif %}

        {% if stock_data and not error_message %}
        <!-- Current Stock Data -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <div class="bg-gray-700 p-4 rounded-lg">
                <h3 class="text-gray-400 text-sm mb-1">Current Price</h3>
                <p class="text-xl font-bold" style="color: {{ user.text_color }}">${{ "%.2f"|format(stock_data.close) }}</p>
            </div>
            <div class="bg-gray-700 p-4 rounded-lg">
                <h3 class="text-gray-400 text-sm mb-1">Previous Close</h3>
                <p class="text-xl font-bold" style="color: {{ user.text_color }}">${{ "%.2f"|format(stock_data.prev_close) }}</p>
            </div>
            <div class="bg-gray-700 p-4 rounded-lg">
                <h3 class="text-gray-400 text-sm mb-1">Day High</h3>
                <p class="text-xl font-bold" style="color: {{ user.text_color }}">${{ "%.2f"|format(stock_data.high) }}</p>
            </div>
            <div class="bg-gray-700 p-4 rounded-lg">
                <h3 class="text-gray-400 text-sm mb-1">Day Low</h3>
                <p class="text-xl font-bold" style="color: {{ user.text_color }}">${{ "%.2f"|format(stock_data.low) }}</p>
            </div>
        </div>
        {% endif %}

        {% if graph_html %}
        <!-- Price History Graph -->
        <div class="bg-gray-700 p-4 rounded-lg">
            <div class="w-full" style="height: 500px;">
                {{ graph_html | safe }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}