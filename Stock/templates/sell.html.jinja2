{% extends "base.html.jinja2" %}
{% block content %}
<style>
    /* Global Styling */
    body {
        background: {{user.background_color if user and user.background_color else '#000000'}};
        background-size: 200% 200%;
        background-position: center;
        background-attachment: fixed;
        color: #ffffff;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }
    
    /* Title Styles */
    .sell-title {
        font-size: 5vw; /* Relative font size */
        font-weight: bold;
        text-align: center;
        color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        margin-bottom: 3vh; /* Relative margin */
        letter-spacing: -2px;
    }
    
    /* Form Container */
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        min-height: 60vh; /* Relative height */
    }
    
    .form-container {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 2vw; /* Relative border radius */
        padding: 3.5vh; /* Relative padding */
        width: 30vw; /* Relative width */
        max-width: 80vw; /* Relative max width */
        box-shadow: 
            0 0 30px rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.2),
            0 15px 40px rgba(0, 0, 0, 0.2);
        border: 2px solid {{ user.accent_color if user and user.accent_color else '#007bff' }};
        backdrop-filter: blur(15px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease;
        will-change: transform, box-shadow; /* Hint to browser for smoother animations */
        -webkit-transform: translateZ(0); /* Force GPU acceleration */
        transform: translateZ(0);
        margin-top: -34%;
    }
    
    /* Form Elements */
    .form-container form {
        width: 100%; /* Full width of the container */
        display: flex;
        flex-direction: column;
        align-items: center; /* Center form elements */
    }
    
    .form-container:hover {
        transform: scale(1.03);
        box-shadow: 
            0 0 40px rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.3),
            0 20px 50px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(15px); /* Maintain consistent blur */
    }
    
    .form-container * {
        transform: translateZ(0);
        backface-visibility: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
    
    .form-container label {
        width: 100%;
        color: {{ user.text_color if user and user.text_color else '#ffffff' }};
        margin-bottom: 1vh; /* Relative margin */
        font-weight: 600;
        font-size: 1.2vw; /* Relative font size */
        text-align: left; /* Align labels to the left */
    }
    
    .form-container select,
    .form-container input[type="number"] {
        width: 100%;
        padding: 1.5vh; /* Relative padding */
        margin-bottom: 2vh; /* Relative margin */
        background-color: #000000; /* Black background */
        border: 2px solid {{ user.accent_color if user and user.accent_color else '#007bff' }};
        color: {{ user.text_color if user and user.text_color else '#ffffff' }};
        border-radius: 1.2vw; /* Relative border radius */
        font-size: 1.1vw; /* Relative font size */
        transition: all 0.3s ease;
        outline: none;
    }
    
    .form-container select option:hover {
        background-color: #333333 !important; /* Dark gray hover color */
        color: {{ user.text_color if user and user.text_color else '#ffffff' }} !important;
    }
    
    /* Custom dropdown selection styling */
    .form-container select option {
        background-color: #000000; /* Black background */
        color: {{ user.text_color if user and user.text_color else '#ffffff' }};
    }
    
    .form-container select option:checked {
        background-color: #333333; /* Dark gray selection color */
        color: {{ user.text_color if user and user.text_color else '#ffffff' }};
    }
    
    /* Submit Button */
    .sell-button {
        width: 100%;
        padding: 2vh; /* Relative padding */
        background-color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        color: white;
        border: none;
        border-radius: 1.2vw; /* Relative border radius */
        cursor: pointer;
        font-size: 1.2vw; /* Relative font size */
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.2vw; /* Relative letter spacing */
        transition: all 0.3s ease;
        box-shadow: 0 0.7vh 2vh rgba(0, 0, 0, 0.2);
    }
    
    /* Rest of the previous CSS remains the same */
    
    .sell-button:hover {
        background-color: {{ (user.accent_color if user and user.accent_color else '#007bff') | lighten_color(10) }};
        transform: translateY(-1vh); /* Relative transform */
        box-shadow: 0 0.7vh 2vh rgba(0, 0, 0, 0.3);
    }
    
    .sell-button:active {
        transform: translateY(0.5vh); /* Relative transform */
        box-shadow: 0 0.3vh 1vh rgba(0, 0, 0, 0.2);
    }
    
    /* Alert Styles */
    .alert {
        width: 100%;
        max-width: 80vw; /* Relative max width */
        margin: 0 auto 1.5vh; /* Relative margin */
        padding: 1.5vh; /* Relative padding */
        border-radius: 1vw; /* Relative border radius */
        text-align: center;
        font-weight: 600;
        opacity: 0.9;
    }
    
    .alert-success {
        background-color: rgba(76, 175, 80, 0.2);
        color: #4CAF50;
        border: 2px solid #4CAF50;
    }
    
    .alert-error {
        background-color: rgba(244, 67, 54, 0.2);
        color: #F44336;
        border: 2px solid #F44336;
    }
    
    /* Success Popup */
    .success-popup {
        position: fixed;
        bottom: 2vh; /* Relative position */
        right: 2vh; /* Relative position */
        background-color: {{ user.accent_color if user and user.accent_color else '#007bff' }};
        color: white;
        padding: 1.5vh 2.5vw; /* Relative padding */
        border-radius: 1vw; /* Relative border radius */
        box-shadow: 
            0 0 2vh rgba({{ (user.accent_color if user and user.accent_color else '#007bff') | hex_to_rgb }}, 0.5),
            0 0.5vh 1.5vh rgba(0, 0, 0, 0.3);
        z-index: 1000;
        display: none;
        animation: popupAnimation 0.5s ease;
    }
    
    @keyframes popupAnimation {
        from {
            opacity: 0;
            transform: translateY(2vh); /* Relative transform */
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Responsive Design */
    @media (max-width: 600px) {
        .sell-title {
            font-size: 8vw; /* Relative font size */
        }
    
        .form-container {
            padding: 3vh; /* Relative padding */
            margin: 0 5vw; /* Relative margin */
        }
    }
</style>

<div class="sell-container">
    <h1 class="sell-title">Sell Assets</h1>

    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}

    <div class="centered-form">
        <div class="form-container">
            <form method="POST" action="{{ url_for('sell') }}" onsubmit="return validateForm()">
                <label for="symbol">Select Asset:</label>
                <select id="symbol" name="symbol" required>
                    <option value="">Select an asset</option>
                    {% for item in portfolio_items %}
                        <option value="{{ item.symbol }}">
                            {{ item.symbol }} ({{ item.shares }} shares)
                        </option>
                    {% endfor %}
                </select>
                
                <label for="shares">Quantity to Sell:</label>
                <input type="number" id="shares" name="shares" step="0.01" min="0.01" required>
        
                <button type="submit" class="sell-button">Sell</button>
            </form>
        </div>
    </div>

    <div id="success-popup" class="success-popup">
        <div class="success-popup-content">
            <p>Sale successful!</p>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        const shares = parseFloat(document.getElementById('shares').value);
        if (isNaN(shares) || shares <= 0) {
            alert('Please enter a positive number for quantity.');
            return false;
        }
        return true;
    }

    function displaySuccessPopup() {
        const successPopup = document.getElementById('success-popup');
        successPopup.style.display = 'block';
        setTimeout(() => {
            successPopup.style.display = 'none';
        }, 3000);
    }
</script>

{% if success %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            displaySuccessPopup();
        });
    </script>
{% endif %}
{% endblock %}