{% extends "base.html.jinja2" %}

{% block content %}
<style>
    :root {
        --background-color: {{ user.background_color if user else '#1a1a1a' }};
        --text-color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
        --accent-color: {{ user.accent_color if user else '#007bff' }};
        --secondary-color: {{ user.secondary_color if user else '#00d9ff' }};
    }

    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        font-family: 'Merriweather', serif;
        background: 
            linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
            linear-gradient(0deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
            var(--background-color);
        background-size: 
            20px 20px,
            20px 20px,
            100% 100%;
        background-position: 
            0 0,
            0 0,
            center;
        background-attachment: fixed;
        color: var(--text-color);
        overflow-x: hidden;
    }

    .dashboard {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        width: 100%;
        padding: 2rem;
        box-sizing: border-box;
        position: relative;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 1rem 0;
        margin-bottom: 2rem;
    }

    .logo {
        font-family: 'Smooch Sans', sans-serif;
        font-size: 14rem;
        font-weight: 700;
        color: var(--accent-color);
        margin-left: 9%;
        margin-bottom: -35%;
    }

    .content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        margin-top: 2rem;
    }

    .hero-text {
        flex: 1;
        max-width: 600px;
    }

    .title {
        font-family: 'Smooch Sans', sans-serif;
        font-size: clamp(3rem, 8vw, 5rem);
        font-weight: 900;
        letter-spacing: 0.2rem;
        margin: 0;
        line-height: 1.1;
        background: linear-gradient(45deg, var(--accent-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: fadeInUp 1s ease-out;
    }

    .subtitle {
        font-size: clamp(1.2rem, 3vw, 1.8rem);
        color: var(--text-color);
        font-weight: 300;
        margin: 1rem 0 2rem;
        animation: fadeInUp 1s ease-out 0.3s backwards;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .cta-button {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: bold;
        color: var(--text-color);
        background-color: var(--accent-color);
        border: none;
        border-radius: 50px;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
        animation: fadeInUp 1s ease-out 0.6s backwards;
    }

    .cta-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 123, 255, 0.3);
    }

    .cta-button.secondary {
        background-color: transparent;
        border: 2px solid var(--accent-color);
    }

    .cta-button.secondary:hover {
        background-color: var(--accent-color);
        color: var(--background-color);
    }

    .hero-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .credit-card {
        width: 80%;
        max-width: 400px;
        height: auto;
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0, 123, 255, 0.2));
    }

    .features {
        display: flex;
        justify-content: space-between;
        width: 100%;
        max-width: 1200px;
        margin-top: 4rem;
        gap: 2rem;
    }

    .feature {
        text-align: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease;
        width: calc(33.333% - 1.333rem);
    }

    .feature:hover {
        transform: translateY(-10px);
    }

    .feature-icon {
        font-size: 2.5rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .feature-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .feature-description {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .circle-background {
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        opacity: 0.1;
        animation: rotate 60s linear infinite;
        pointer-events: none;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .dashboard {
            padding: 1rem;
        }

        .header {
            flex-direction: column;
            align-items: flex-start;
        }

        .content {
            flex-direction: column;
        }

        .hero-text, .hero-image {
            width: 100%;
            text-align: center;
        }

        .cta-buttons {
            justify-content: center;
        }

        .features {
            flex-direction: column;
            align-items: stretch;
            gap: 2rem;
        }

        .feature {
            width: 100%;
            max-width: none;
        }
    }
</style>

<div class="dashboard">
    <header class="header">
        <div class="logo">TouZi</div>
    </header>

    <div class="content">
        <div class="hero-text">
            <h1 class="title">Trade Smarter, Not Harder</h1>
            <h2 class="subtitle">Experience the future of trading with TouZi's cutting-edge platform.</h2>
            <div class="cta-buttons">
                <a href="{{ url_for('buy') }}" class="cta-button">Get Started</a>
                <a href="#" class="cta-button secondary">Learn More</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="{{ url_for('static', filename='Images/credit_card.png') }}" alt="TouZi Trading Card" class="credit-card">
        </div>
    </div>

    <div class="features">
        <div class="feature">
            <div class="feature-icon">üèÜ</div>
            <h3 class="feature-title">Leaderboard</h3>
            <p class="feature-description">Compete with others and track your progress on our global leaderboard.</p>
        </div>
        <div class="feature">
            <div class="feature-icon">üíπ</div>
            <h3 class="feature-title">Stocks & Crypto</h3>
            <p class="feature-description">Trade both stocks and cryptocurrencies on our versatile platform.</p>
        </div>
        <div class="feature">
            <div class="feature-icon">üéì</div>
            <h3 class="feature-title">Student-Developed</h3>
            <p class="feature-description">Created by students, for students - learn as you trade!</p>
        </div>
    </div>

    <svg class="circle-background" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="0.5"/>
        <circle cx="50" cy="50" r="40" fill="none" stroke="currentColor" stroke-width="0.3"/>
        <circle cx="50" cy="50" r="35" fill="none" stroke="currentColor" stroke-width="0.2"/>
    </svg>
</div>
{% endblock %}
