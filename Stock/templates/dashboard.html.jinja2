{% extends "base.html.jinja2" %}
{% block content %}
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Smooch+Sans:wght@100..900&display=swap" rel="stylesheet">
</head>
<style>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: 
      linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
      linear-gradient(0deg, rgba(255,255,255,0.05) 1px, transparent 1px) 0 0,
      radial-gradient(circle at center, 
        {{ user.gradient_color if user else 'rgba(16,0,32,1)' }} 0%, 
        rgba(0,0,0,1) 20%, 
        rgba(0,0,0,1) 100%);
    background-size: 
      20px 20px,
      20px 20px,
      110% 110%;
    background-position: 
      0 0,
      0 0,
      -185% -150%;
    background-attachment: fixed;
    overflow-x: hidden;
    overflow-y: hidden;
  }

  .minimal-dashboard {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    min-height: 100vh;
    width: 100%;
    padding: 5vw;
    position: relative;
    box-sizing: border-box;
  }

  .header-container {
    text-align: left;
    max-width: 90%;
    z-index: 1;
    padding: 1rem;
    margin-top: -10vh;
  }

  .stock-trading {
    font-size: clamp(3rem, 15vw, 12rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-weight: 900;
    font-family: "Smooch Sans", serif;
    letter-spacing: 0.5rem;
    margin-bottom: 0;
    line-height: 0.9;
  }

  .made-free {
    font-size: clamp(1rem, 4vw, 3rem);
    color: {{ user.text_color if user else 'rgb(255, 255, 255)' }};
    font-family: "Merriweather", serif;
    font-weight: 400;
    margin: 0;
    padding-left: 0.5rem;
  }

  .credit-card-image {
    position: absolute;
    width: 20%;
    height: auto;
    top: 6%;
    left: 6%;
    transform: rotate(10deg);
    z-index: 2;
  }

  .circle-container {
    position: absolute;
    bottom: -40%;
    right: -50%;
    width: 150%;
    height: 150%;
    z-index: 0;
    overflow: visible;
  }

  .circle-container svg {
    width: 100%;
    height: 100%;
    transform-origin: 50% 50%;
    animation: rotate-circle 20s linear infinite;
    filter: 
      drop-shadow(0 0 2.5px {{ user.accent_color if user else '#007bff' }})
      drop-shadow(0 0 5px {{ user.accent_color if user else '#007bff' }})
      drop-shadow(0 0 7.5px {{ user.accent_color if user else '#007bff' }});
  }
  
  .circle-container svg circle {
    stroke-opacity: 0.7;
  }
  
  .circle-container svg line {
    stroke-opacity: 0.6;
  }

  @keyframes rotate-circle {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .cta-button {
    display: inline-block;
    padding: clamp(10px, 2vw, 15px) clamp(20px, 4vw, 30px);
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    font-weight: bold;
    color: #ffffff;
    background-color: {{ user.accent_color if user else '#007bff' }};
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-transform: uppercase;
    text-decoration: none;
    transition: opacity 0.3s ease;
    margin-top: 1rem;
  }

  .cta-button:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .minimal-dashboard {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .header-container {
      text-align: center;
      max-width: 100%;
    }

    .credit-card-image {
      position: relative;
      top: auto;
      right: auto;
      margin: 2rem 0;
      width: clamp(100px, 50vw, 250px);
    }
  }
</style>

<div class="minimal-dashboard">
  <div class="header-container">
    <h1 class="stock-trading">TouZi</h1>
    <h2 class="made-free">Free Trading</h2>
    <a href="{{ url_for('buy') }}" class="cta-button">Get Started</a>
  </div>
  <img src="{{ url_for('static', filename='Images/credit_card.png') }}" alt="Stylized Credit Card" class="credit-card-image" aria-label="Credit Card Icon">
  <div class="circle-container">
    <svg viewBox="-900 -900 1800 1800" preserveAspectRatio="xMidYMid meet">
      <circle 
        cx="0" 
        cy="0" 
        r="880" 
        fill="none"  
        stroke="{{ user.accent_color if user else '#007bff' }}"  
        stroke-width="5"
      />
      {% for i in range(50) %}
      <line 
        x1="0" 
        y1="0" 
        x2="0" 
        y2="900" 
        stroke="{{ user.accent_color if user else '#007bff' }}"  
        stroke-width="3"  
        transform="rotate({{ i * 7.2 }})"
      />
      {% endfor %}
    </svg>
  </div>
</div>
{% endblock %}