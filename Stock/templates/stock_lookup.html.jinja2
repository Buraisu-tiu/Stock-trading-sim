{% extends 'base.html.jinja2' %}

{% block content %}
  <style>
    #chart-container {
      width: 800px;
      height: 400px;
      margin: 40px auto;
      border: 1px solid #ddd;
      padding: 20px;
      background-color: #f9f9f9;
    }
  </style>

  <h1>Stock Lookup</h1>
  <form>
    <label for="symbol">Enter stock symbol:</label>
    <input type="text" id="symbol" name="symbol">
    <button type="submit">Lookup</button>
  </form>
  <div id="chart-container"></div>

  <script>
    const symbolInput = document.getElementById('symbol');
    const chartContainer = document.getElementById('chart-container');

    symbolInput.addEventListener('input', (e) => {
      const symbol = e.target.value.toUpperCase();
      fetchStockData(symbol);
    });

    function fetchStockData(symbol) {
      const url = `https://api.finnhub.io/v1/stock/candle?symbol=${symbol}&resolution=D&from=1643723400&to=1646315200&token=YOUR_FINNHUB_API_KEY`;
      fetch(url)
        .then((response) => response.json())
        .then((data) => renderChart(data))
        .catch((error) => console.error(error));
    }

    function renderChart(data) {
      const chart = new Chart(chartContainer, {
        type: 'line',
        data: {
          labels: data.t.map((timestamp) => new Date(timestamp * 1000).toLocaleDateString()),
          datasets: [{
            label: 'Stock Price',
            data: data.c,
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    }
  </script>
{% endblock %}