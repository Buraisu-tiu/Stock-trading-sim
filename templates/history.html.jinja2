{% extends "base.html.jinja2" %}

{% block content %}
<h1 class="accent">Transaction History</h1>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Symbol</th>
                <th>Shares</th>
                <th class="price">Price</th>
                <th class='total_stock_price'>Total</th>
                <th class='profit_loss'>Profit/Loss</th>
            </tr>
        </thead>
        <tbody>
            {% for transaction in history %}
            <tr>
                <td>{{ transaction.date }}</td>
                <td class="{{ transaction.type.lower() }}">{{ transaction.type }}</td>
                <td>{{ transaction.symbol }}</td>
                <td>{{ transaction.shares }}</td>
                <td class="transaction_price">${{ transaction.price }}</td>
                <td class="transaction_total">${{ transaction.total }}</td>
                <td class="{{ 'profit' if transaction.profit_loss > 0 else 'loss' }}">
                    ${{ transaction.profit_loss }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
